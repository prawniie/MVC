@model MVC02.Models.ViewModels.CreateProductVm

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>
<div id="displayer">
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Product.Name" class="control-label"></label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Product.CategoryId">Category</label>
                    <select class="form-control" asp-for="Product.CategoryId" asp-items="@Model.AllCategories">
                        <option>Please select one</option>
                    </select>
                </div>

                <div class="form-group">
                    <label asp-for="Product.ForSale">For Sale: </label>
                    <input asp-for="Product.ForSale" type="checkbox" class="checkbox" aria-checked="true">
                </div>

                <div class="form-group">
                    <label asp-for="Product.Stock" class="control-label"></label>
                    <input asp-for="Product.Stock" class="form-control" />
                    <span asp-validation-for="Product.Stock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>