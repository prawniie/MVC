@model ToDo.ViewModels.TaskListVm

<div class="text-center">

    <div class="container">
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <h3>Add task</h3>
                <form method="post">
                    <label asp-for="Task.Name">Name</label><br />
                    <input asp-for="Task.Name" /> <br />
                    <label asp-for="Task.Description">Description</label><br />
                    <input asp-for="Task.Description" /><br />
                    <label asp-for="Task.Ranking">Ranking</label><br />
                    <input asp-for="Task.Ranking" /><br /><br />
                    <button type="submit">Add task</button>
                </form>
            </div>
            <div class="col-sm">
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm">
            </div>
            <div class="col-sm">
                <h3>Update task</h3>
                <form asp-action="GetById" method="get">
                    <select name="id" asp-items="Model.AllTasks"></select>
                    <button type="submit">Ok</button>
                </form>
            </div>
            <div class="col-sm">
            </div>
        </div>
    </div>

    <a asp-controller="Home" asp-action="Index">Go back to main menu</a>
</div>